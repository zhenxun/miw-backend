{% extends 'templates/default.twig' %}

{% block content %}

    <div class="row wrapper border-bottom white-bg page-heading" >
                <div class="col-lg-10">
                    <h2><img src="{{ base_url() }}/img/icon/magazine.png" style="width:25px;height:25px;">  品牌經營</h2>
                    <ol class="breadcrumb">
                        <li>
                            <a href="{{ path_for('home')}}">首頁</a>
                        </li>
                        <li>
                            <a>傢飾</a>
                        </li>
                        <li class="active">
                            <strong>品牌經營</strong>
                        </li>
                    </ol>
                </div>
    </div>

     <div class="col-lg-12 page-heading-line"></div>

            <div class="row  border-bottom white-bg dashboard-header">

                    <div class="row">
                      <div class="col-md-12 text-right">
                        <button type="button" role="6" class="btn btn-warning btn-home-upload"><i class="fa fa-upload" aria-hidden="true"></i> 上傳檔案</button>
                        <button type="button" position="brand" class="btn btn-info btn-files-list"><i class="fa fa-list-ul" aria-hidden="true"></i> 檔案列表</button>
                      </div>
                      
                      <br><br><br>

                      {% include 'templates/partials/flash.twig' %}

                       <div class="row">
                        {% for content in contents %}
                        <div class="col-md-4" style="height:759.657px">
                          <div class="thumbnail">
                            <a href="#">
                              <img src="{{ base_url() }}/upload/contents/{{ content.filename }}" alt="Lights" style="width:100%">
                            </a>
                            <div class="caption text-right" style="position:relative;top:-1em;">
                               <button class="btn btn-outline btn-danger dim brandDelete" role="{{ content.id }}" type="button"><i class="fa fa-trash-o" aria-hidden="true"></i></button>
                            </div>
                          </div>
                        </div>
                        {% endfor %}
                      </div>

            </div>  

            {% set vars1 = {'title': '主體傢飾檔案列表'} %}
            {% include 'templates/partials/modal-list.twig' with  vars1 %}
            {% set vars2 = {'title':'內容列表'} %}
            {% include 'templates/partials/modal-content-list.twig' with vars2 %}
            {% set vars = {'title': '品牌經營檔案上傳'} %}
            {% include 'templates/partials/modal-furniture.twig' with  vars %}
            {% set vars3 = {'title':'內容標籤編輯'} %}
            {% include 'templates/partials/modal-content-tag.twig' with vars3 %}
            {% set class = {'class': 'wanted-delete-brand-content'} %}
            {% include 'templates/partials/modal-delete.twig' with class %}
            {% include 'templates/partials/modal-cover-delete.twig' %}

{% endblock %}