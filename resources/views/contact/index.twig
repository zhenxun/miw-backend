{% extends 'templates/default.twig' %}

{% block content %}

	<div class="row wrapper border-bottom white-bg page-heading" >
                <div class="col-lg-10">
                    <h2><img src="{{ base_url() }}/img/icon/contact.png" style="width:25px;height:25px;">聯絡記錄</h2>
                    <ol class="breadcrumb">
                        <li>
                            <a href="{{ path_for('home')}}">首頁</a>
                        </li>
                        <li class="active">
                            <strong>聯絡記錄</strong>
                        </li>
                    </ol>
                </div>
    </div>

     <div class="col-lg-12 page-heading-line"></div>

<form class="form-horizontal" action="" method="POST">
    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
                    <div class="col-lg-12">
                        <div class="ibox float-e-margins">

                            <div class="ibox-content">
                                <div class="alert contact-list-msg" style="display : none;">
                                    <button aria-hidden="true" data-dismiss="alert" class="close" type="button">×</button>
                                </div>

                                <table id="contactTable" class="display" cellspacing="0" width="100%">
                                        <thead>
                                            <tr>
                                                <th width="20">序</th>
                                                <th width="150">日期/時間</th>
                                                <th width="150">姓名</th>
                                                <th width="150">電子郵件</th>
                                                <th>信息內容</th>
                                                <th class="text-center" width="50">編輯</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {% for index, contact in contacts %}
                                                <tr>
                                                    <td class="text-center">{{ index + 1 }}</td>
                                                    <td>{{ contact.created_at}}</td>
                                                    <td>{{ contact.name }}</td>
                                                    <td><a href="mailto:{{ contact.email }}">{{ contact.email }}</a></td>
                                                    <td>{{ contact.message }}</td>
                                                    <td class="text-center"><a class="contact-del" title="刪除" role="{{contact.id}}" style="cursor:pointer;"><i class="fa fa-trash" aria-hidden="true"></i></a></td>
                                                </tr>
                                            {% endfor %}
                                        </tbody>
                                </table>

                            </div>
                        </div>
                    </div>
        </div>
    </div>
</form>

    {% set class = {'class': 'wanted-delete-contact'} %}
    {% include 'templates/partials/modal-delete.twig' with class %}

{% endblock %}


