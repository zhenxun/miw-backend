{% extends 'templates/default.twig' %}

{% block content %}

	<div class="row wrapper border-bottom white-bg page-heading" >
                <div class="col-lg-10">
                    <h2><img src="{{ base_url() }}/img/icon/foot.png" style="width:25px;height:25px;">  頁腳設定</h2>
                    <ol class="breadcrumb">
                        <li>
                            <a href="{{ path_for('home')}}">首頁</a>
                        </li>
 						<li>
                            <a>系統設定</a>
                        </li>                        
                        <li class="active">
                            <strong>頁腳設定</strong>
                        </li>
                    </ol>
                </div>
    </div>

     <div class="col-lg-12 page-heading-line"></div>

    <form class="form-horizontal" action="{{ path_for('footer.update') }}" method="POST" enctype="multipart/form-data">
    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
                    <div class="col-lg-12">
                        <div class="ibox float-e-margins">

                            <div class="ibox-content">
                                <div class="panel panel-default">
                                <div class="panel-body" style="margin:20px 20px 0 20px;">
                                        {% include 'templates/partials/flash.twig' %}
										 <div class="form-group">
										    <label for="logoUpload">頁腳圖片上傳</label>
                                            {% if logo %}
                                                <div class="row">
                                                  <div class="col-xs-6 col-md-3">
                                                    <a href="#" class="thumbnail">
                                                      <img src="../../upload/footer/{{ logo.value }}">
                                                    </a>
                                                  </div>
                                                </div>
                                            {% endif %}
                                            <span class="label label-warning">溫馨提示: 上傳圖片不能小於 1008 x 150 像素</span><br><br>                                            
										    <input type="file" name="logo" id="logoUpload">
										  </div>
                                        <br><br>
                                      <button type="submit" class="btn btn-info">儲存</button>
                                    </div>
                                </div>                            	

                            </div>
                        </div>
                    </div>
        </div>
    </div>
   </form>

{% endblock %}